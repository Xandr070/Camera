<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/photoFragment">

    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.camera.fragment.PhotoFragment"
        android:label="PhotoFragment">
        <action
            android:id="@+id/action_photo_to_gallery"
            app:destination="@id/galleryFragment" />
    </fragment>

    <fragment
        android:id="@+id/videoFragment"
        android:name="com.example.camera.fragment.VideoFragment"
        android:label="VideoFragment">
        <action
            android:id="@+id/action_video_to_gallery"
            app:destination="@id/galleryFragment" />
    </fragment>

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.camera.fragment.GalleryFragment"
        android:label="GalleryFragment">
        <action
            android:id="@+id/action_gallery_to_photo"
            app:destination="@id/photoFragment" />
    </fragment>

</navigation>

